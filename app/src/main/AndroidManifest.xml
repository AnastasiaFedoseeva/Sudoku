<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sudoku">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:noHistory="true"
        android:roundIcon="@drawable/icon"
        android:icon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sudoku">
        <activity
            android:name=".authorization.StartActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authorization.AuthorizationActivity"
            android:noHistory="true"
            android:parentActivityName=".main_menu.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".records.RecordsActivity"
            android:noHistory="true"
            android:parentActivityName=".main_menu.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.GameActivity"
            android:parentActivityName=".main_menu.MainActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main_menu.MainActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>